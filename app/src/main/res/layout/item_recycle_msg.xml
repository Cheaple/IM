<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:src="@drawable/avatar2"/>

        <LinearLayout
            android:id="@+id/dialog_box_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            >

            <TextView
                android:id="@+id/msg_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="xixixixixixixixixixixixixixixixixixixixixixixixixixixixixixixixixixixixi" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_box_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            >

            <TextView
                android:id="@+id/msg_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="xixixixixixixixixixixixixixixixixixixixixixixixixixixixi" />
        </LinearLayout>
        <ImageView
            android:id="@+id/avatar_right"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@drawable/avatar2"/>
    </LinearLayout>
</LinearLayout>