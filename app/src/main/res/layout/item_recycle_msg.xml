<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.im.view.SquareImageView
            android:id="@+id/img_avatar_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:layout_gravity="left"
            android:layout_marginStart="4dp"
            android:src="@drawable/avatar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_msg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginStart="12dp"
            android:text="Hello world!"
            app:layout_constraintStart_toEndOf="@+id/img_avatar_left"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.im.view.AutoHeightImageView
            android:id="@+id/img_picture_left"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/img_avatar_left"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.im.view.AutoHeightVideoView
            android:id="@+id/video_left"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/img_avatar_left"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_msg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginEnd="12dp"
            android:text="xixi"
            app:layout_constraintEnd_toStartOf="@+id/img_avatar_right"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.im.view.AutoHeightImageView
            android:id="@+id/img_picture_right"
            android:layout_height="135dp"
            android:layout_width="180dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/img_avatar_right"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.im.view.AutoHeightVideoView
            android:id="@+id/video_right"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/img_avatar_right"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.im.view.SquareImageView
            android:id="@+id/img_avatar_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="4dp"
            android:src="@drawable/avatar2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>